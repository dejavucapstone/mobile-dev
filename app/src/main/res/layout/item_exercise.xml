<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/history_item_bg"
    android:layout_marginBottom="16dp"
    android:elevation="4dp">

    <!-- Exercise Title -->
    <TextView
        android:id="@+id/tvExerciseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/latihan_jumat"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Exercise Date -->
    <TextView
        android:id="@+id/tvExerciseDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/_13_november_2024"
        android:textSize="14sp"
        android:textColor="#808080"
        android:layout_marginBottom="8dp" />

    <!-- Progress Bar (representing duration or progress) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/ic_launcher_background" />

    <!-- Exercise Details (Duration, Set, Weight) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <!-- Duration -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_duration"
                android:contentDescription="Duration Icon" />

            <TextView
                android:id="@+id/tvExerciseDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1_menit"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/durasi"
                android:textSize="12sp"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>

        <!-- Set -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_set"/>

            <TextView
                android:id="@+id/tvExerciseSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_2"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set"
                android:textSize="12sp"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>

        <!-- Weight -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_weight" />

            <TextView
                android:id="@+id/tvExerciseWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_180kg"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/beban"
                android:textSize="12sp"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
