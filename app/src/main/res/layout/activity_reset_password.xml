<android.widget.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/forgot_background">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="80dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back"
                android:contentDescription="@string/back"
                android:layout_marginEnd="8dp" />

            <!-- Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="@string/reset_password"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:fontFamily="@font/montserrat_semibold" />
        </LinearLayout>

        <!-- Content -->
        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headerContainer"
            android:layout_marginTop="180dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/enterNewPasswordTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_new_password"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/passwordInstruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reset_password_description"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- New Password Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_transparent_edittext"
                android:padding="8dp">

                <EditText
                    android:id="@+id/newPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/new_password_hint"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/toggleNewPasswordVisibility"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_eye_closed_black" />
            </LinearLayout>

            <!-- Confirm Password Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_transparent_edittext"
                android:padding="8dp">

                <EditText
                    android:id="@+id/confirmPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/confirm_password_hint"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/toggleConfirmPasswordVisibility"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_eye_closed_black"
                    android:layout_gravity="center" />
            </LinearLayout>

            <!-- Submit Button with Overlay Text -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="25dp"
                android:gravity="center">

                <!-- ImageButton -->
                <ImageButton
                    android:id="@+id/continueButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/button_black_background"
                    android:contentDescription="@string/confirm"
                    android:focusable="true"
                    android:clickable="true" />

                <!-- Text Overlay -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/confirm"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </FrameLayout>

        </LinearLayout>
    </RelativeLayout>

</android.widget.ScrollView>
