<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Gymer" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
    </style>

    <style name="Theme.Gymer" parent="Base.Theme.Gymer">

    </style>

    <style name="CustomDatePickerDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <!-- Customize the dialog background -->
        <item name="android:background">#000000</item>
        <item name="android:colorBackground">#000000</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
    </style>

    <style name="CustomTimePickerDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <!-- Dialog background -->
        <item name="android:background">#000000</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
    </style>

    <style name="CustomDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>
</resources>